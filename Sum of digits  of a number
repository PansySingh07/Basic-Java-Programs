import java.util.Scanner;
public class SumOfDigits {
    public static void main(String[] args) {
        int sum =0;
       Scanner sc=new Scanner(System.in);
       System.out.println("Enter the number");
        int num=sc.nextInt();
        while(num!=0){
        int digit = num%10;
        sum = sum + digit;
        num = num/10;
        }
        System.out.println("Sum of the digits is: " +sum);
        sc.close();
    }
}
